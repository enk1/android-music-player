<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gmail.grzywaczewskijakub.musicapp.musicapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SongDetail"
            android:label="@string/song_details_label" />
        <activity
            android:name=".ArtistDetail"
            android:label="@string/artist_details_label" />
        <activity
            android:name=".ArtistList"
            android:label="@string/artists_list_label" />
        <activity
            android:name=".PaymentActivity"
            android:label="@string/payment_label" />
    </application>

</manifest>